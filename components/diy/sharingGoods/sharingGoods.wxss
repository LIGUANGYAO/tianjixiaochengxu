/* 商品组 */

.diy-sharingGoods {
  padding:0 30rpx 30rpx;
}

.goods-item {
  height: 320rpx;
  border-bottom: 1px solid #f0f3f8;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.goods-item:last-child {
  margin-bottom: 0;
  border-radius: 0 0 20rpx 20rpx
}

/* 商品图片 */

.goods-item_left {
  display: flex;
  width: 40%;
  background: #fff;
  align-items: center;
}

.goods-item_left .image {
  display: block;
  width: 100%;
  margin: 0 auto;
}

.goods-item_right {
  position: relative;
  width: 60%;
}

/* 商品名称 */

.goods-item_right .goods-item_title {
  margin-bottom: 17rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 1.3;
  color: #222;
}

.goods-item_desc {
  margin-top: 16rpx;
}

/* 商品卖点 */

.desc-selling_point {
  width:100%;
  /* height: 40rpx; */
  font-size: 24rpx;
  line-height: 30rpx;
  color: #9b9b9b;
  padding-right: 35rpx;
  padding-bottom: 10rpx;
}

/* 拼团信息 */

.desc-situation {
  margin-top: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  line-height: 1.3;
  color: rgb(240, 60, 60);
}

.desc-situation .people {
  margin: 0 12rpx;
}

/* 商品价格 */

.desc_footer {
  margin-top: 18rpx;
  font-size: 24rpx;
  position: relative;
}

.desc_footer .price_x {
  margin-right: 16rpx;
  color: rgb(240, 60, 60);
  font-size: 28rpx;
}

.desc_footer .price_y {
  text-decoration: line-through;
}

/* 去拼团按钮 */

.goods-item .btn-settlement {
  position: absolute;
  right: 0;
  bottom: -10rpx;
  padding: 0 22rpx;
  border-radius: 40rpx;
  background: linear-gradient(to right, rgb(255,198,76) 0%, rgb(255, 172, 76) 100%);
  box-shadow: 0 4rpx 20rpx -4rpx rgb(255,198,76);
  font-size: 28rpx;
  line-height: 54rpx;
  text-align: center;
  color: #fff;
}
.tg_box{width: 100%;padding: 0 30rpx;}
.tg_top{width: 100%;background: #fff;overflow: hidden;padding: 30rpx 24rpx;border-radius: 20rpx 20rpx 0 0}
.tg_top view{line-height: 30rpx;}
.tg_top view:first-of-type{float: left;font-size: 30rpx;color: #323232;}
.tg_top view:nth-of-type(2){font-size: 22rpx;color: #9f9f9f;padding-left: 20rpx;float: left}
.tg_top view:nth-of-type(3){font-size: 24rpx;color: #4e4e4e;float:right;}



