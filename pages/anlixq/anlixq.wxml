<!--pages/anlixq/anlixq.wxml-->
<import src="../../wxParse/wxParse.wxml"></import>

<view class="anli-main">
<view class="anli-box">
  <view class="anli-h1">{{ detail.article_title }}</view>
  <view class="anli-lx">
    <view class="anli-txt">案例类型：<text>{{detail.article_subtitle}}</text></view>
    <view class="anli-time">{{ detail.view_time }}</view>
  </view>
  <view class="anli-bt">
    <view>案例详情</view>
  </view>

  <view class="anli-txtbox">
  <view class="anli-txt1">
    <template is="wxParse" data="{{wxParseData:content.nodes}}"></template>
  </view>

    <view class="anli-bot">
    <view class="anli-left" bindtap="prev" wx:if="{{prev.article_title}}">
      上一篇：{{prev.article_title}}
    </view>
    <view class="anli-left" bindtap="prev"  wx:if="{{!prev.article_title}}">
      上一篇：没有了
    </view>
    <view class="anli-left" bindtap="next" wx:if="{{next.article_title}}">
      下一篇：{{next.article_title}}
    </view>
    <view class="anli-left" bindtap="next"  wx:if="{{!next.article_title}}">
      下一篇：没有了
    </view>
    </view>


  </view>

</view>
</view>
