/* pages/about/about.wxss */
.big_view{width: 100%;padding: 30rpx;background: #f0f3f8;}
view{box-sizing: border-box}
.about-img{width: 100%;}
.about-img image{width: 100%}
.about-main{width: 100%;background: #fff;border-radius:20rpx;padding: 36rpx;margin-top:30rpx}
.about-main .about-h1{font-size: 36rpx;color: #ff843c;margin-bottom: 30rpx;}
.about-main .about-txt{width: 100%;}
.about-txt view{font-size: 24rpx;color: #222222;margin-bottom: 40rpx;line-height: 36rpx;}

.hjbox{width: 100%;overflow:hidden}
.hjbox .hjsbox{width: 49%;margin-right: 2%;position: relative;float: left;margin-bottom: 18rpx;}
.hjsbox image{width: 100%}
.hjbox .hjsbox:nth-of-type(even){margin-right: 0}
.hjsbox view{width: 100%;line-height:60rpx;color: #fff;position: absolute;left: 0;bottom: 0;font-size: 18rpx;text-align: center}

.nfbox{width: 100%;overflow:hidden;position: relative;margin: 50rpx 0;}
.nfbox image{position: absolute;left: 0;top: 0;width: 100%}
.nfsbox{width:50%;float: left;text-align: center;margin-bottom: 30rpx;padding: 0 36rpx;}
.nfsbox .nfh1{font-size: 36rpx;font-weight: bolder;color: #fe660d;margin-bottom: 16rpx;}
.nfsbox .nftxt{font-size: 22rpx;color: #222222;line-height: 34rpx;}

.hzbox{width: 100%;}
.hzbox .hzh1{font-size: 36rpx;color: #ff843c;margin-bottom: 50rpx;}
.hzbox image{width: 100%}

.footer{width:100;background: #1d1d1d;padding: 40rpx 50rpx;text-align: center}
.footer .footer-box1{font-size:28rpx;margin-bottom: 20rpx;color: #fff}
.footer .footer-box2{font-size:28rpx;margin-bottom: 24rpx;color: #fff}
.footer .footer-box3{width: 187rpx;height: 56rpx;text-align: center;margin: 0 auto;font-size: 28rpx;line-height: 56rpx;color: #898989;border:1px solid #5b5b5b;border-radius: 5rpx;}
.footer .footer-box4{font-size: 28rpx;color: #828282;margin-top: 40rpx;}
.footer .footer-box5{font-size: 28rpx;color: #828282;margin-top: 20rpx;line-height: 40rpx;}




