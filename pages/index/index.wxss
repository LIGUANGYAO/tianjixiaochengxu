/* diy组件 */
@import "../../components/diy/index.wxss";

view{box-sizing: border-box;}

.ts-main{width: 100%;background: #f0f3f8;padding:0 30rpx 30rpx;}
.ts-main .ts-box{background: #fff;width: 100%;border-radius: 20rpx;padding: 30rpx 24rpx;}
.ts-img{width: 100%;text-align: center}
.ts-img image{width: 146rpx;height: 146rpx;}
.ts-txt{font-size: 23rpx;color: #323232;padding: 14rpx 28rpx 40rpx;line-height: 36rpx;text-align: center}

.nfbox{width: 100%;overflow:hidden;position: relative;}
.nfbox image{position: absolute;left: 0;top: 0;width: 100%;height: 100%}
.nfsbox{width:50%;float: left;text-align: center;margin-bottom: 40rpx;padding: 0 36rpx;}

.nfsbox .nfh1{font-size: 36rpx;font-weight: bolder;color: #fe660d;margin-bottom: 16rpx;}
.nfsbox .nftxt{font-size: 22rpx;color: #222222;line-height: 34rpx;}

.tj-main{width: 100%;background: #f0f3f8;padding: 20rpx;}
.tjbox{width: 100%;background: #fff;border-radius: 20rpx;}
.tj-h1{font-size: 36rpx;color: #1b1b1b;padding:50rpx 0 12rpx;}
.tj-x{width: 45rpx;height: 5rpx;background: #ff843c;border-radius: 10rpx;}
.tj-sbox{width: 100%;overflow: hidden;padding:30rpx 24rpx;border-bottom: 1px solid #f0f3f8;box-sizing: border-box;}
.tj-sbox .tj-left{width: 420rpx;float: left}
.tj-sbox .tj-img{width: 182rpx;height: 130rpx;float: right;}
.tj-img image{width: 100%;}
.tj-txt{font-size: 30rpx;color: #222222;line-height: 36rpx;margin-bottom: 20rpx;}
.tj-time{font-size:22rpx;color: #999999;}
.article-top{width:100%;padding: 30rpx;border-radius: 20rpx 20rpx 0 0;box-sizing: border-box;overflow: hidden;margin: 0 auto;background: #fff}
.article-top .article-h1{font-size: 30rpx;color: #323232;float: left}
.article-more{float: right;font-size: 24rpx;color: #4e4e4e}

.footer{width:100;background: #1d1d1d;padding: 40rpx 50rpx;text-align: center}
.footer .footer-box1{font-size:28rpx;margin-bottom: 20rpx;color: #fff}
.footer .footer-box2{font-size:28rpx;margin-bottom: 24rpx;color: #fff}
.footer .footer-box3{width: 187rpx;height: 56rpx;text-align: center;margin: 0 auto;font-size: 28rpx;line-height: 56rpx;color: #898989;border:1px solid #5b5b5b;border-radius: 5rpx;}
.footer .footer-box4{font-size: 28rpx;color: #828282;margin-top: 40rpx;}
.footer .footer-box5{font-size: 28rpx;color: #828282;margin-top: 20rpx;line-height: 40rpx;}


