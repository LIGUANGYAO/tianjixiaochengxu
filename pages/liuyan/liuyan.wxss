view{box-sizing: border-box}
.ly-main{width: 100%;background: #f0f3f8;padding: 30rpx}
.ly-box{width:100%;padding: 50rpx;background: #fff;border-radius: 20rpx;}
.ly-box view image{width: 28rpx;}
.ly-h1{font-size: 32rpx;color: #222222;margin-bottom: 40rpx;}
.ly-input{width: 100%;height: 80rpx;border: 1px solid #e3e3e3;padding: 10rpx 0 10rpx 60rpx;position: relative;margin-bottom: 30rpx;}
.ly-input:hover{border: 1px solid #ff843c}
.ly-input image{position: absolute;left: 24rpx;top: 50%;transform: translateY(-50%)}
.ly-input input{width: 100%;height: 100%;font-size: 27rpx;color:#414141}
.ly-input picker{width: 100%;height: 100%}
.textarea{width: 100%;height: 280rpx;padding: 20rpx;border:1px solid #e3e3e3;box-sizing: border-box;font-size: 27rpx;
color: #414141;}
.textarea:hover{border: 1px solid #ff843c}
.sub{widows: 100%;height: 80rpx;line-height: 80rpx;font-size: 28rpx;color: #ffffff;background: linear-gradient(to right,#ffa72b,#ff7733);margin: 55rpx 0;}

